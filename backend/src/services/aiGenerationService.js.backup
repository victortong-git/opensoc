  /**
   * Generate AI response for chat using Ollama
   */
  async generateResponse(options = {}) {
    const { prompt, model, maxTokens = 1000, temperature = 0.7 } = options;
    
    try {
      console.log('ðŸ¤– Generating AI chat response with Ollama...');
      console.log('ðŸ“ Prompt length:', prompt.length);
      console.log('ðŸ”§ Model:', model || this.model);
      console.log('ðŸŒ Ollama URL:', this.baseURL);
      
      // Check if Ollama is available first
      const connectionStatus = await this.checkConnection();
      if (!connectionStatus.connected) {
        console.warn('âš ï¸ Ollama not available, falling back to contextual stub');
        return this.generateStubResponse(prompt, model);
      }
      
      // Use the real Ollama API
      const response = await this.callOllama(prompt);
      
      return {
        response,
        content: response,
        model: model || this.model,
        usage: {
          promptTokens: Math.ceil(prompt.length / 4),
          completionTokens: Math.ceil(response.length / 4),
          totalTokens: Math.ceil((prompt.length + response.length) / 4)
        }
      };
    } catch (error) {
      console.error('âŒ AI response generation failed:', error);
      console.warn('âš ï¸ Falling back to contextual stub due to error');
      return this.generateStubResponse(prompt, model);
    }
  }
  
  /**
   * Generate stub response when Ollama is not available
   */
  generateStubResponse(prompt, model) {
    console.log('ðŸ¤– Using stub response...');
    const response = this.generateContextualStubResponse(prompt);
    
    return {
      response,
      content: response,
      model: model || 'stub-model',
      usage: {
        promptTokens: Math.ceil(prompt.length / 4),
        completionTokens: Math.ceil(response.length / 4),
        totalTokens: Math.ceil((prompt.length + response.length) / 4)
      }
    };
  }

