      const validIncidents = [];
      const invalidIncidents = [];
      
      incidents.forEach((incident, index) => {
        const missingFields = [];
        
        if (!incident || typeof incident !== 'object') {
          invalidIncidents.push({ index, reason: 'Not an object', incident });
